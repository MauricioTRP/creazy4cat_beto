<body class= "show-body">
  

<p style="color: green"><%= notice %></p>

<%= render @post %>

<%= form_with(model: @comment, local: true) do |f| %>
<% if @comment.errors.any? %>
  <div id = 'error_explanation'>
  <h2>Este comentario no se pudo crear por las siguientes
  razones</h2>
  <ul>
    <% @comment.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
 
  <%= form_with model: @poost.comeents.build do |form| %>
    <%= form.text_field :poost_id, value: @poost_id%>
    <%= form.text_field :comments %>
  <%= form.submit %>
<% end %>

<% end %>
<%= render 'comeents/form' %>

 <div class="reaccion">
    <% Poost::Kinds.each do |kind| %>
      <%= button_to "#{Poost::KindsSpanish[kind]}",
         user_reaction_path(post_id: @post.id, reaction_type:
      "post", kind: kind), method: :post %>
    <% end %>
  </div>

<div>
  <div class="edits">
  <%= link_to "Edit this post", edit_poost_path(@post) %> |
  <%= link_to "Back to posts", poosts_path %>
  </div>
  <%= button_to "Destroy this post", @post, method: :delete, class:"destroy" %>

</div>
</body>